   "source": [
    "import pandas as pd\n",
    "\n",
    "df = pd.DataFrame({'name': ['hoge', 'fuga', 'piyo'], 'size': [1, 2, 3], 'year': [20, 30, 20]})\n",
    "sum = df.groupby('year')['size'].transform('sum')\n",
    "df2 = df.copy()\n",
    "df2['sum'] = sum\n",
    "df2['hoge'] = df2['size'] / df2['sum']\n",
    "df2"
   ]
  }
